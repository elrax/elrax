---
import BaseHead from "@elrax/shared/components/BaseHead.astro"
import Header from "@elrax/shared/components/Header.astro"
import Footer from "@elrax/shared/components/Footer.astro"
import Sidebar from "@elrax/shared/components/Sidebar.astro"
import bgSmall from "../assets/icons/bg/sm.svg"
import bgLarge from "../assets/icons/bg/lg.svg"
import { SITE_TITLE, SITE_DESCRIPTION, SITE_URL } from "../consts"

export type Props = {
	title?: string
	description?: string
	pageUrl?: string
	coverUrl?: string
}

const {
	title = SITE_TITLE,
	description = SITE_DESCRIPTION,
	pageUrl = SITE_URL,
	coverUrl = "https://elrax.com/preview.png",
} = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead {title} {description} {pageUrl} {coverUrl} />
	</head>
	<body class="bg-[#0A141D] relative text-white font-nunito">
		<img class="w-full md:hidden pointer-events-none absolute" src={bgSmall.src} alt="bg" />
		<img
			class="w-full hidden md:block pointer-events-none top-0 absolute"
			src={bgLarge.src}
			alt="bg"
		/>
		<Header />
		<slot />
		<Footer />
		<Sidebar />
		<style is:global>
			@import "tailwindcss/base";
			@layer base {
				main h1 {
					@apply text-4xl leading-[42px] font-black text-center md:text-start md:text-5xl md:leading-[58px] 2xl:text-[64px] 2xl:leading-[72px];
				}
				main h2 {
					@apply text-gradient-h2 text-center md:text-left font-black text-[32px] leading-[38px] md:text-4xl md:leading-[42px] 2xl:text-[48px] 2xl:leading-[58px];
				}
				main h4 {
					@apply text-lg font-bold md:text-lg 2xl:text-xl 2xl:leading-[30px];
				}
				main p {
					@apply text-base font-normal md:text-base 2xl:text-xl 2xl:leading-[30px];
				}
				section {
					@apply relative lg:max-w-[900px] 2xl:max-w-[1200px] lg:mx-auto;
				}
			}
			.border-gradient {
				box-shadow:
					rgba(78, 82, 86, 0.196) 0.12073px 0.12073px 0px -0.25px inset,
					rgba(78, 82, 86, 0.9) 1px 1px 0px -0.5px inset,
					rgba(69, 67, 157, 0.157) 0px -0.12073px 0px -0.125px inset,
					rgba(69, 67, 157, 0.95) 0px -1px 0px -0.25px inset,
					rgba(83, 81, 184, 0.31) -0.24145px 0.18109px 0px -0.625px inset,
					rgba(83, 81, 184, 0.75) -2px 1.5px 0px -1.25px inset;
			}
			.active-bg-gradient {
				background: linear-gradient(180deg, #1b2228 0%, rgba(29, 36, 44, 0.4) 100%);
			}
			.text-gradient-h1 {
				background: linear-gradient(92deg, #efadff 18.46%, #b6ceff 60.37%);
				background-clip: text;
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
			}
			.text-gradient-h2 {
				background: linear-gradient(270deg, #ca73fc 0.3%, #71cbff 101.47%);
				background-clip: text;
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
			}
			.text-gradient-p {
				background: var(--gradient-blue-3, linear-gradient(180deg, #c8d9fc 0%, #f8f9ff 100%));
				background-clip: text;
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
			}
			.btn-gradient {
				background: var(
					--gradient-purple-1-main-day,
					linear-gradient(270deg, #9747ff 0%, #427ff7 100%)
				);
			}
			.circle-gradient {
				pointer-events: none;
				background: radial-gradient(50% 50% at 50% 50%, #2028f6 0%, rgba(135, 33, 245, 0) 100%);
			}
		</style>
	</body>
</html>
