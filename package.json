{
	"name": "elrax",
	"version": "0.0.1",
	"description": "An open-source video crowdfunding platform",
	"homepage": "https://elrax.com",
	"bugs": "https://github.com/elrax/elrax/issues",
	"license": "AGPL-3.0-only",
	"author": "Elrax Corp.",
	"repository": "https://github.com/elrax/elrax",
	"private": true,
	"packageManager": "bun@1.0.25",
	"scripts": {
		"build": "nx run-many -t=build --exclude=elrax --output-style=stream",
		"clean": "nx run-many -t=clean --exclude=elrax && rm -rf node_modules",
		"dev": "nx run-many -t=dev --exclude=elrax --output-style=stream",
		"fix-pkgs": "syncpack fix-mismatches && syncpack set-semver-ranges && syncpack format",
		"format": "nx run-many -t=format --exclude=elrax --output-style=stream",
		"lint": "nx run-many -t=lint --exclude=elrax --output-style=stream",
		"release": "release-it",
		"update-hooks": "simple-git-hooks"
	},
	"devDependencies": {
		"@release-it/bumper": "6.0.1",
		"@release-it/conventional-changelog": "8.0.1",
		"@typescript-eslint/eslint-plugin": "6.20.0",
		"@typescript-eslint/parser": "6.20.0",
		"eslint": "8.56.0",
		"eslint-config-prettier": "9.1.0",
		"nx": "17.3.0",
		"prettier": "3.2.4",
		"release-it": "17.0.3",
		"simple-git-hooks": "2.9.0",
		"syncpack": "12.3.0"
	},
	"peerDependencies": {
		"typescript": "5.2.2"
	},
	"resolutions": {
		"semver": "7.5.4"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"project": true
		},
		"extends": [
			"plugin:@typescript-eslint/recommended",
			"prettier"
		],
		"rules": {
			"@typescript-eslint/restrict-template-expressions": "off",
			"@typescript-eslint/no-unused-vars": "error",
			"@typescript-eslint/consistent-type-imports": [
				"error",
				{
					"prefer": "type-imports",
					"fixStyle": "inline-type-imports"
				}
			],
			"quotes": [
				2,
				"double"
			],
			"semi": [
				2,
				"never"
			],
			"comma-dangle": [
				"error",
				"always-multiline"
			]
		},
		"ignorePatterns": [
			"**/*.config.js",
			"**/*.config.cjs"
		]
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": false,
		"semi": false,
		"trailingComma": "all",
		"printWidth": 100
	},
	"release-it": {
		"hooks": {
			"after:bump": "bun run fix-pkgs"
		},
		"git": {
			"tagName": "v${version}",
			"requireBranch": "main",
			"commitMessage": "chore: release v${version}"
		},
		"github": {
			"release": true,
			"releaseName": "v${version}"
		},
		"npm": {
			"publish": false,
			"ignoreVersion": true
		},
		"plugins": {
			"@release-it/bumper": {
				"out": [
					"apps/**/package.json",
					"packages/**/package.json"
				]
			},
			"@release-it/conventional-changelog": {
				"infile": "CHANGELOG.md",
				"header": "# Changelog",
				"preset": {
					"name": "conventionalcommits",
					"types": [
						{
							"type": "feat",
							"section": "Features"
						},
						{
							"type": "fix",
							"section": "Bug Fixes"
						},
						{}
					]
				}
			}
		}
	},
	"simple-git-hooks": {
		"pre-commit": "bun lint && bun fix-pkgs"
	},
	"syncpack": {
		"semverGroups": [
			{
				"range": "",
				"dependencies": [
					"**"
				],
				"packages": [
					"**"
				]
			}
		],
		"dependencyTypes": [
			"prod",
			"dev",
			"peer",
			"resolutions"
		],
		"indent": "\t",
		"sortFirst": [
			"name",
			"version",
			"description",
			"keywords",
			"homepage",
			"bugs",
			"license",
			"author",
			"repository",
			"private",
			"packageManager",
			"type",
			"main",
			"files",
			"scripts",
			"dependencies",
			"devDependencies",
			"peerDependencies",
			"trustedDependencies",
			"resolutions",
			"workspaces"
		]
	}
}
