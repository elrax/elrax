{
	"name": "elrax",
	"version": "0.1.0",
	"description": "An open-source video crowdfunding platform",
	"homepage": "https://elrax.com",
	"bugs": "https://github.com/elrax/elrax/issues",
	"license": "AGPL-3.0-only",
	"author": "Elrax Corp.",
	"repository": "https://github.com/elrax/elrax",
	"private": true,
	"packageManager": "bun@1.1.21",
	"scripts": {
		"build": "nx run-many -t=build --exclude=elrax --output-style=stream",
		"clean": "nx run-many -t=clean --exclude=elrax && rm -rf node_modules",
		"dev": "nx run-many -t=dev --exclude=elrax --output-style=stream",
		"fix-pkgs": "syncpack fix-mismatches && syncpack set-semver-ranges && syncpack format",
		"format": "nx run-many -t=format --exclude=elrax --output-style=stream",
		"lint": "nx run-many -t=lint --exclude=elrax --output-style=stream",
		"release": "release-it",
		"update-hooks": "simple-git-hooks"
	},
	"devDependencies": {
		"@release-it/bumper": "6.0.1",
		"@release-it/conventional-changelog": "8.0.2",
		"eslint": "9.10.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-astro": "1.2.4",
		"nx": "19.7.3",
		"prettier": "3.3.3",
		"release-it": "17.6.0",
		"simple-git-hooks": "2.11.1",
		"syncpack": "12.4.0",
		"typescript-eslint": "7.17.0"
	},
	"peerDependencies": {
		"typescript": "5.5.4"
	},
	"resolutions": {
		"semver": "7.5.4"
	},
	"workspaces": [
		"apps/*",
		"apps/web/*",
		"packages/*"
	],
	"prettier": {
		"useTabs": true,
		"singleQuote": false,
		"semi": false,
		"trailingComma": "all",
		"printWidth": 120
	},
	"release-it": {
		"hooks": {
			"after:bump": "bun fix-pkgs"
		},
		"git": {
			"tagName": "v${version}",
			"requireBranch": "main",
			"commitMessage": "chore: release v${version}"
		},
		"github": {
			"release": true,
			"releaseName": "v${version}"
		},
		"npm": {
			"publish": false,
			"ignoreVersion": true
		},
		"plugins": {
			"@release-it/bumper": {
				"out": [
					"apps/**/package.json",
					"packages/**/package.json"
				]
			},
			"@release-it/conventional-changelog": {
				"infile": "CHANGELOG.md",
				"header": "# Changelog",
				"preset": {
					"name": "conventionalcommits",
					"types": [
						{
							"type": "feat",
							"section": "Features"
						},
						{
							"type": "fix",
							"section": "Bug Fixes"
						},
						{}
					]
				}
			}
		}
	},
	"simple-git-hooks": {
		"pre-commit": "bun fix-pkgs && bun lint"
	},
	"syncpack": {
		"versionGroups": [
			{
				"label": "Ignoring tailwind version",
				"packages": [
					"@elrax/mobile"
				],
				"isIgnored": true
			}
		],
		"semverGroups": [
			{
				"range": "",
				"dependencies": [
					"**"
				],
				"packages": [
					"**"
				]
			}
		],
		"dependencyTypes": [
			"prod",
			"dev",
			"peer",
			"resolutions"
		],
		"indent": "\t",
		"sortFirst": [
			"name",
			"version",
			"description",
			"keywords",
			"homepage",
			"bugs",
			"license",
			"author",
			"repository",
			"private",
			"packageManager",
			"type",
			"main",
			"files",
			"scripts",
			"dependencies",
			"devDependencies",
			"peerDependencies",
			"trustedDependencies",
			"resolutions",
			"workspaces"
		]
	}
}
