---
import arrowUp from "../assets/icons/arrow-up.svg"

const socials = [
	{
		name: "Mastodon",
		link: "https://mastodon.social/@elrax",
	},
	{
		name: "X (Twitter)",
		link: "https://x.com/elraxcom",
	},
	{
		name: "Github",
		link: "https://github.com/elrax",
	},
	// {
	// 	name: "Discord",
	// 	link: "/",
	// },
	{
		name: "Instagram",
		link: "https://instagram.com/elraxcom",
	},
	{
		name: "TikTok",
		link: "https://www.tiktok.com/@elraxcom",
	},
]
---

<button
	x-data="{ dropdown: false }"
	@click="dropdown = !dropdown"
	id="dropdown-button"
	class="dropdown-hidden flex justify-between md:justify-start gap-1 relative font-semibold md:text-sm items-center leading-[100%] p-4 rounded-xl hover:bg-white/10 focus:bg-white/10 md:py-1.5 md:pr-3 md:pl-4 text-lg 2xl:text-lg transition-all"
>
	Our Socials
	<svg
		class="w-5 h-5 pointer-events-none"
		width="20"
		height="20"
		viewBox="0 0 20 20"
		fill="none"
		xmlns="http://www.w3.org/2000/svg"
	>
		<path
			d="M5 7.5L10 12.5L15 7.5"
			stroke="white"
			stroke-width="2"
			stroke-linecap="round"
			stroke-linejoin="round"></path>
	</svg>
	<div
		x-cloak
		x-show="dropdown"
		x-transition
		@click.outside="dropdown = false"
		class="z-30 w-full md:w-auto absolute dropdown active-bg-gradient border-gradient rounded-2xl flex flex-col top-[140%] p-4 gap-2 left-[0%]"
	>
		{
			socials.map((e) => (
				<a
					class="w-full md:w-[160px] 2xl:w-[180px] px-4 flex hover:bg-white/10 transition-all rounded-xl items-center justify-between text-left h-10"
					href={e.link}
					rel={e.name === "Mastodon" ? "me" : ""}
				>
					<p>{e.name}</p>
					<img class="w-5 h-5" src={arrowUp.src} alt="arrow" />
				</a>
			))
		}
	</div>
</button>
